{% extends "base.twig" %}

{% block title %}
    Home Page
    
{% endblock %}
{% block head %}{% endblock %}
{% block content %}
    <h1>
        {{ namepage|capitalize }}
    </h1>
    <div class="container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">
                        Spotify_Id
                    </th>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        Popularity
                    </th>
                    <th scope="col">
                        id_image
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for artist in pageData %}
                    <tr>
                        <th>
                            {{ artist.spotify_id }}
                        </th>
                        <td>
                            {{ artist.name }}
                        </td>
                        <td>
                            {{ artist.popularity }}
                        </td>
                        <td>
                            {{ artist.id_image }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
